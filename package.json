{
  "name": "taskfile",
  "version": "0.1.0",
  "description": "Yet another attempt at a simple task runner for npm with parallelisation support using bash commands via YAML.",
  "main": "src/taskfile.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "nyc ava && npm run report",
    "report": "nyc report --reporter=html"
  },
  "bin": {
    "taskfile": "./src/taskfile.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Wildhoney/Taskfile.git"
  },
  "keywords": [
    "taskfile",
    "tasks",
    "npm",
    "run",
    "scripts",
    "build",
    "test"
  ],
  "author": "Adam Timberlake <adam.timberlake@gmail.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/Wildhoney/Taskfile/issues"
  },
  "homepage": "https://github.com/Wildhoney/Taskfile#readme",
  "dependencies": {
    "js-yaml": "~3.7.0",
    "ramda": "~0.23.0"
  },
  "devDependencies": {
    "ava": "~0.17.0",
    "babel-cli": "~6.22.2",
    "babel-polyfill": "~6.22.0",
    "babel-preset-es2015": "~6.22.0",
    "babel-preset-stage-3": "~6.22.0",
    "babel-register": "~6.22.0",
    "coveralls": "~2.11.15",
    "mock-fs": "~4.2.0",
    "nyc": "~10.0.0"
  },
  "ava": {
    "files": [
      "tests/*.test.js"
    ],
    "babel": "inherit",
    "require": [
      "babel-register",
      "babel-polyfill"
    ]
  }
}
